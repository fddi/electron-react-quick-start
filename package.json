{
  "name": "electron-react-quick-start",
  "version": "1.0.3",
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "antd": "^4.19.5",
    "electron-is-dev": "^2.0.0",
    "ffi-napi": "^4.0.3",
    "history": "^4.10.1",
    "iconv-lite": "^0.6.3",
    "nconf": "^0.10.0",
    "prismjs": "^1.25.0",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.2",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^5.0.0"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "babel-plugin-prismjs": "^2.1.0",
    "concurrently": "^6.5.1",
    "craco-less": "^2.0.0",
    "cross-env": "^5.2.0",
    "electron": "^18.0.3",
    "electron-builder": "^22.13.1",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "web": "craco start",
    "electron": "electron ./",
    "build": "craco build",
    "test": "craco test --env=jsdom",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently \"cross-env BROWSER=none craco start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "pack-32": "electron-builder --dir --ia32",
    "dist": "electron-builder build --x64",
    "dist-32": "electron-builder build --ia32"
  },
  "build": {
    "appId": "electron-react-quick-start",
    "win": {
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "extraFiles": [
      "addon",
      {
        "from": "config.json",
        "to": "config.json"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
