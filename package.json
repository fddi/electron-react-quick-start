{
  "name": "electron-react-quick-start",
  "version": "1.0.1",
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "antd": "^4.9.2",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.0.6",
    "ffi-napi": "^2.4.7",
    "history": "^4.10.1",
    "iconv-lite": "^0.6.2",
    "moment": "^2.29.0",
    "nconf": "^0.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "web-vitals": "^0.2.4",
    "winax": "^1.20.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.1.2",
    "@testing-library/user-event": "^12.2.2",
    "@craco/craco": "^5.8.0",
    "craco-less": "^1.17.0",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "electron": "^9.2.1",
    "electron-builder": "^22.8.0",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "web": "craco start",
    "electron": "electron ./",
    "build": "craco build",
    "test": "craco test --env=jsdom",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently \"cross-env BROWSER=none craco start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build --publish=never --ia32  --win -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "appId": "electron-react-quick-start",
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost:8008/download/electron-react-qs"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [],
    "extraFiles": [
      "addon",
      {
        "from": "config.json",
        "to": "config.json"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
